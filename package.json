{
  "name": "santa-app",
  "version": "0.0.1",
  "description": "A simple Node app built on Express, instantly up and running.",
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run dev",
    "start:prod": "node apps/server/dist/main",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "turbo": "^2.0.11"
  },
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "npm@10.8.1",
  "license": "MIT",
  "keywords": [
    "node",
    "glitch",
    "express"
  ]
}
